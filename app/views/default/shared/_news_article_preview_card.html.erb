<div class="news-item clearfix my-2">
  <span class="text-primary"><%= article.created_at.strftime('%e %B %Y') %></span>
  <h4><%= link_to article.title, article.materialized_path %></h4>

  <% if article.content(:photo).nil? %>
  <% else %>
    <%= image_tag article.content(:photo).file.thumb, class: "float-xs-left" %>
  <% end %>

  <p><%= article.content(:text).try(:html_safe) %></p>
</div>
