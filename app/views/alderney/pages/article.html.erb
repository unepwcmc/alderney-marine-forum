<div class="row">
  <div class="col-lg-12">
    <div class="container">
      <%= link_to :back do %>
        <p class="text-muted"><i class="fa fa-arrow-left"></i> Back </p>
      <% end %>
      <div class="my-2">
        <%= image_tag @page.content(:photo).file.url, class: 'article__header-image' %>
      </div>
      <span class="text-primary"><%= @page.created_at.strftime('%e %B %Y') %></span>
      <h1> <%= @page.title %> </h1>
      <%= @page.content(:text).try(:html_safe) %>
    </div>
  </div>
</div>
